{% extends 'base.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-5 col-md-offset-3 col-sm-5 col-sm-offset-3 col-xs-5 col-xs-offset-3">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Punto de Inicio <small>Editar Registro</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(edit_form) }}
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            {{ form_widget(edit_form) }}
                            <a href="{{ path('vacacionconfig_index') }}" class="btn btn-default"><i class="fa fa-list" aria-hidden="true"></i>  Ir a la lista</a>
                            <a href="{{ path('vacacionconfig_actuaalizar', { 'id': vacacionConfig.id }) }}"
                               class="btn btn-default"><i class="fa fa-refresh"
                                                          aria-hidden="true"></i> Actualizar</a>

                            <input class="btn btn-success" type="submit" value="Guardar" />

                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ form_javascript(edit_form) }}
{% endblock javascripts %}
