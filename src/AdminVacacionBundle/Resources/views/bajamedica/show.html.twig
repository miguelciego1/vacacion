{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bajamedica</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bajaMedica.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ bajaMedica.tipo }}</td>
            </tr>
            <tr>
                <th>Cant</th>
                <td>{{ bajaMedica.cant }}</td>
            </tr>
            <tr>
                <th>Motivo</th>
                <td>{{ bajaMedica.motivo }}</td>
            </tr>
            <tr>
                <th>Desdeel</th>
                <td>{% if bajaMedica.desdeEl %}{{ bajaMedica.desdeEl|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hastael</th>
                <td>{% if bajaMedica.hastaEl %}{{ bajaMedica.hastaEl|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Creadoel</th>
                <td>{% if bajaMedica.creadoEl %}{{ bajaMedica.creadoEl|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ bajaMedica.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bajamedica_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bajamedica_edit', { 'id': bajaMedica.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
