<!DOCTYPE html>
<html>
    <head>
        <style>
    #bor{
    border: 1px;
    border-collapse: collapse;
    border-style: groove;
    }
</style>
    </head>
    <body>

    <table width="100%"  cellspacing="0" cellpadding="0" style="table-layout:fixed font-size:10px";>
        <thead>
            <tr>
                <th colspan="4" id="bor"><h3>Reporte Permiso</h3></th>
            </tr>
            <tr>
                <td colspan="2" id="bor"><FONT SIZE=2>Fecha de Emision : {{ "now"|date("m/d/Y") }}</FONT></td>
                <td colspan="2" id="bor"><FONT SIZE=2>Usuario : {{ app.user.username }}</FONT></td>
            </tr>
            <tr>
                <td id="bor"><FONT SIZE=2>Cantidad Items : {{permisos|length}} </FONT></td>
                <td id="bor"><FONT SIZE=2>Desde : {{fIni}}</FONT></td>
                <td id="bor"><FONT SIZE=2>Hasta : {{fFin}}</FONT></td>
            </tr>
        </thead>
    </table>
    <br>
    <table width="100%"  cellspacing="0" cellpadding="0" style="table-layout:fixed font-size:10px";>
        <thead>
            <tr>
                <th width="6%" id="bor"><FONT SIZE=2>Correlativo</FONT></th>
                <th width="12%" id="bor"><FONT SIZE=2>Cod. Empleado</FONT></th>
                <th width="21%" id="bor"><FONT SIZE=2>Empleado</FONT></th>
                <th width="10%" id="bor"><FONT SIZE=2>Fecha Inicio</FONT></th>
                <th width="10%" id="bor"><FONT SIZE=2>Fecha Fin</FONT></th>
                <th width="10%" id="bor"><FONT SIZE=2>Fecha Regreso</FONT></th>
                <th width="7%" id="bor"><FONT SIZE=2>Tiempo</FONT></th>
                <th width="7%" id="bor"><FONT SIZE=2>Unidad</FONT></th>
            </tr>
        </thead>

        <tbody>
            {% for permiso in permisos%}
                <tr style="page-break-inside: avoid";>
                   <td align="center"><FONT SIZE=2>{{permiso.id}}</FONT></td>
                    <td align="center"><FONT SIZE=2>{{permiso.empleado.id}}</FONT></td>
                    <td><FONT SIZE=2>{{permiso.empleado}}</FONT></td>
                    <td align="center"><FONT SIZE=2>{{permiso.fechaInicio|date('Y-m-d')}}</FONT></td>
                    <td align="center"><FONT SIZE=2>{{permiso.fechaFin|date('Y-m-d')}}</FONT></td>
                    <td align="center"><FONT SIZE=2>{{permiso.fechaRegreso|date('Y-m-d')}}</FONT></td>
                    <td align="right"><FONT SIZE=2>{{permiso.tiempoLicencia}}</FONT></td>
                    <td align="center"><FONT SIZE=2>{{permiso.tipo}}</FONT></td>

                </tr>
            {% endfor%}
        </tbody>
    </table>
    </body>

</html>
