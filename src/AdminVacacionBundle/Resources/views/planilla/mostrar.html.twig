{% extends 'base.html.twig' %}

{% block page_content %}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
      		<div class="table-responsive">
                      <table class="table table-bordered">
                        <thead>
                        <tr>{{planilla|length}}</tr>
                          <tr>
                          	<th></th>
                          	<th colspan="3">Nombre y Apellido del Trabajador</th>
                          	<th colspan="4"></th>
                          	<th colspan="2">Enfermedad</th>
                          	<th colspan="2">Maternidad</th>
                          	<th colspan="2">Profecional</th>
                          </tr>
                          <tr class="headings">
                          	<th>Cod.Empl</th>
                          	<th>Paterno</th>
                          	<th>Materno</th>
                          	<th>Nombre</th>
                          	<th>Fecha Nac.</th>
                          	<th>Fec. Baja</th>
                          	<th>Fec. Alta</th>
                          	<th>Sueldo Diario</th>
                          	<th>Dias</th>
                          	<th>Monto</th>
                          	<th>Dias</th>
                          	<th>Monto</th>
                          	<th>Dias</th>
                          	<th>Monto</th>
                          </tr>
                        </thead>
                        <tbody>
                        	{% for empleado in planilla %}
                        	<tr>
                        		<td>{{empleado.empleado.id}}</td>
                        		<td>{{empleado.empleado.paterno}}</td>
                        		<td>{{empleado.empleado.materno}}</td>
                        		<td>{{empleado.empleado.nombre}}</td>
                        		<td>{{empleado.empleado.fchnac|date('d/m/Y')}}</td>
                        		<td>{{empleado.desdeEl|date('d/m')}}</td>
                        		<td>{{empleado.hastaEl|date('d/m')}}</td>
                        		<td>{%  if empleado.sueldo %}{{empleado.sueldo}}{% endif %}</td>
                        		<td>{{empleado.enfermedad}}</td>
                        		<td>
                        			{%  if empleado.sueldo %}{{(empleado.sueldo)*empleado.enfermedad}}{% endif %}</td>
                        		<td>{{empleado.maternidad}}</td>
                        		<td>
                        			{%  if empleado.sueldo %}{{(empleado.sueldo)*empleado.maternidad}}{% endif %}
                        		</td>
                        		<td>{{empleado.accidente}}</td>
                        		<td>
                        			{%  if empleado.sueldo %}{{(empleado.sueldo)*empleado.accidente}}{% endif %}
                        		</td>
                        	</tr>
                        	{% endfor %}
                        </tbody>
                      </table>
            </div>

        </div>
    </div>
</div>
{% endblock %}